// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  name         String
  lastname     String
  password     String
  rol         String
  signupDate   DateTime       @default(now())
  profileImage String?
  transactions Transaction[]
  accounts     account[]
  budgetCategories BudgetItem[]
  budgetSubcategories BudgetItemSubcategory[]
}

model Transaction {
  id          String   @id @default(uuid())
  type        String
  date        DateTime
  accountFrom String
  accountTo   String
  amount      Int
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model account {
  id        String      @id @default(uuid())
  title     String
  amount   Int
  icon String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model BudgetItem {
    id                  String      @id @default(uuid())
    type                String
    title               String
    amount              Int
    used                Int
    remaining           Int
    month               String
    userId              String
    user      User     @relation(fields: [userId], references: [id])
    budgetSubcategories BudgetItemSubcategory[]
  }
  
  model BudgetItemSubcategory {
    id                  String      @id @default(uuid())
    type                String
    title               String
    amount              Int 
    used                Int         @default(0)
    remaining           Int         @default(0)
    budgetCategoryId    String
    userId              String
    user                User        @relation(fields: [userId], references: [id])
    budgetCategory      BudgetItem     @relation(fields: [budgetCategoryId], references: [id])
  }